        <div class="contentTitle">
            <h2><?php echo html_entity_decode($record['titolo'], ENT_COMPAT, 'UTF-8') ?></h2>
        </div>

        <?php if (isset($record['sommario'])): ?>
            <div><?php echo utf8_encode($record['sommario']) ?></div>
