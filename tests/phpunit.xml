	<testsuites>
		<testsuite name="BackendTests">
			<directory suffix=".php">./BackendTests</directory>
		</testsuite>
	</testsuites>
	<testsuites>
		<testsuite name="ConfigTests">
			<directory suffix=".php">./ConfigTests</directory>
		</testsuite>
	</testsuites>
	<testsuites>
		<testsuite name="LanguageTests">
			<directory suffix=".php">./LanguageTests</directory>
		</testsuite>
	</testsuites>
	<testsuites>
		<testsuite name="PostsTests">
			<directory suffix=".php">./PostsTests</directory>
		</testsuite>
	</testsuites>
	<testsuites>
		<testsuite name="SetupTests">
			<directory suffix=".php">./SetupTests</directory>
		</testsuite>
	</testsuites>
</phpunit>